@page
@model LoginModel
@{
    <style>
        .form-control{
            width: 25%;
        }

        .btn-primary{
            margin-top: 10px;
        }
    </style>
<div class="container">
    <form method="post">
            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
            {
                <div class="alert alert-danger" role="alert">
                    @Html.Raw(ViewData["ErrorMessage"])
                </div>
            }
        <h1>Please log in here</h1>
        <div class="form-group">
            <label for="userName">User Name:</label>
                <input type="text" id="userName" name="userName" asp-validation-for="userName" class="form-control">
                <span asp-validation-for="Username" class="validation-error"></span>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input asp- type="password" id="password" name="password" class="form-control">
                <span asp-validation-for="Password" class="validation-error"></span>
        </div>
        <button type="submit" class="btn btn-primary">Log in</button>
    </form>
</div>
}
