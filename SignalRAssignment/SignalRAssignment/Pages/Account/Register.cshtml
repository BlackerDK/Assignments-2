@page
@model SignalRAssignment.Pages.Account.RegisterModel
@{
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Creation Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        form {
            max-width: 500px;
            margin: auto;
        }

        label {
            display: block;
            margin-bottom: 8px;o
        }

        input, select, textarea h1 {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #45a049;
            }
    </style>
</head>

<div class="container">
    <h1 style="text-align: center;">Register</h1>
    <form method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="NewAccount.UserName"></label>
            <input asp-for="NewAccount.UserName" class="form-control" required/>
            <span asp-validation-for="NewAccount.UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewAccount.Password"></label>
            <input asp-for="NewAccount.Password" type="password" class="form-control" required />
            <span asp-validation-for="NewAccount.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewAccount.FullName"></label>
            <input asp-for="NewAccount.FullName" class="form-control" required />
            <span asp-validation-for="NewAccount.FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewAccount.Type"></label>
            <select asp-for="NewAccount.Type" class="form-control" required>
                <option value="0">User</option>
                <option value="1">Admin</option>
            </select>
            <span asp-validation-for="NewAccount.Type" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
